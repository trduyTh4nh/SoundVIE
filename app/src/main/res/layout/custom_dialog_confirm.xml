<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_horizontal"
            android:id="@+id/dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn có chắc muốn hủy gói premium! 🥵" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/error"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" + Mất quyền lợi" />
            <TextView
                android:textStyle="bold"
                android:textColor="@color/error"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" + Không thể nghe nhạc chất lượng cao" />
            <TextView
                android:textStyle="bold"
                android:textColor="@color/error"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" + Danh sách phát sẽ giới hạn 20 bài" />
            <TextView
                android:textStyle="bold"
                android:textColor="@color/error"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" + Không thể thể tải bài hát về nghe khi offline" />
        </LinearLayout>
        <LinearLayout

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <Button
                android:layout_marginRight="18dp"
                android:id="@+id/dialog_button_positive"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="OK" />
            <Button
                android:layout_marginLeft="10dp"
                android:background="@color/error"
                android:id="@+id/dialog_button_negative"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Hủy" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>